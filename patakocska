    <script>
        // Oldalváltó funkció
        function showPage(pageId) {
            // Elrejtjük az összes oldalt
            document.querySelectorAll('.page').forEach(page => {
                page.style.display = 'none';
            });
            
            // Megjelenítjük a kiválasztott oldalt
            document.getElementById(pageId).style.display = 'block';
            
            // Animáció: oldal elejére ugrás simán
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        }
        
        // Alapértelmezettként megjelenítjük a születés oldalt
        document.addEventListener('DOMContentLoaded', function() {
            showPage('szuletes');
            
            // Random animációk hozzáadása
            const sections = document.querySelectorAll('.section');
            sections.forEach((section, index) => {
                // Random késleltetés az animációkhoz
                section.style.animationDelay = `${index * 0.1}s`;
                
                // Random hover hatások
                if(Math.random() > 0.5) {
                    section.addEventListener('mouseenter', function() {
                        this.style.transform = 'rotate(' + (Math.random() * 2 - 1) + 'deg)';
                    });
                    section.addEventListener('mouseleave', function() {
                        this.style.transform = '';
                    });
                }
            });
            
            // Neon effektus a navigációs gombokhoz
            const navButtons = document.querySelectorAll('.nav-btn');
            setInterval(() => {
                navButtons.forEach(btn => {
                    btn.style.borderColor = `hsl(${Math.random() * 360}, 100%, 50%)`;
                    btn.style.color = `hsl(${Math.random() * 360}, 100%, 70%)`;
                });
            }, 1000);
        });
    </script>
</body>
</html>
